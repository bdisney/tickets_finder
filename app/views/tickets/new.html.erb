<div class="description">
  <h2 class="h2-responsive wow fadeInLeft" data-wow-delay="0.3s"><%= t('.buy_ticket') %></h2>
  <hr class="hr-dark wow fadeInLeft" data-wow-delay="0.3s">
</div>

<%= form_for(@ticket) do |f| %>
  <%= render 'shared/errors_messages', resource: @ticket %>
  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :start_station_id %>
  <%= f.hidden_field :last_station_id %>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div class="card  wow fadeInUpBig z-depth-3 text-white" id="transparent">
        <div class="card-block" >
          <h2><%= f.label :passenger_name %></h2>
          <%= f.text_field :passenger_name, class: 'form-control text-center text-white'%>
          <br/>
          <%= f.label :passport_number %>
          <%= f.text_field :passport_number, class: 'form-control text-center text-white' %>

          <br>
          <div class="flex-center">
            <button type="submit" class="btn btn-success btn-rounded wow fadeInUpBig">
              <%= t('.buy') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br/>

<%= link_to t('common.back'), search_path %>


