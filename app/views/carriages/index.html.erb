<h1>Вагоны</h1>

<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
      <tr>
        <th>Тип вагона</th>
        <th>Верхние места</th>
        <th>Нижние места</th>
        <th colspan="3" class="text-right">Actions</th>
      </tr>
      </thead>

      <tbody>
        <% @carriages.each do |carriage| %>
          <%= render 'carriage', carriage: carriage %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Новый вагон', new_carriage_path %>
