<%= form_for [:admin, @train, carriage.becomes(Carriage)] do |f| %>
    <%= render 'shared/errors_messages', resource: carriage %>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :train, 'Выберите поезд', class: "text-muted" %>
        <%= f.collection_select :train_id, Train.all, :id, :number, {},
                                class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :varriation, 'Тип вагона', class: "text-muted" %><br>
        <%= f.select :type, Carriage::TYPES.map { |type| [ type[1], type[0] ] }, {},
                     class: "form-control" %>
      </div>
    </div>
    <br />
    <div class="row">
      <div class="col-md-6">
        <%= f.label :top_seats, 'Кол-во верхник мест', class: "text-muted" %>
        <%= f.text_field :top_seats, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :bottom_seats, 'Кол-во нижних мест', class: "text-muted" %>
        <%= f.text_field :bottom_seats, class: "form-control" %>
      </div>
    </div>
    <br />

    <div class="row">
      <div class="col-md-6">
        <%= f.label :side_top_seats, 'Кол-во верхних боковых мест', class: "text-muted" %>
        <%= f.text_field :side_top_seats, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :side_bottom_seats, 'Кол-во нижних боковых мест', class: "text-muted" %>
        <%= f.text_field :side_bottom_seats, class: "form-control" %>
      </div>
    </div>
    <br />

    <div class="row">
      <div class="col-md-6">
        <%= f.label :seats, 'Кол-во сидячих мест', class: "text-muted" %>
        <%= f.text_field :seats, class: "form-control" %>
      </div>
    </div>

    <br />
    <div class="actions">
      <%= f.submit "#{ carriage.new_record? ? 'Создать' : 'Изменить' }", class: "btn btn-default" %>
    </div>
<% end %>
